{
    "name": "BAD_MobileNetV2",
    "n_gpu": 1,
    "arch": {
        "type": "MobileNetV2",
        "args": {
            "n_class": 2
        }
    },
    "data_loader": {
        "type": "BADDataLoader",
        "args":{
            "data_dir": "/mnt/disks/ssd/datasets/feature_npy/",
            "sample_rate": 22050,
            "fold": 0,
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.005,
	    "momentum": 0.98
        }
    },
    "lr_scheduler": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.98
        }
    },
    "loss": "cross_entropy",
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,
        
        "tensorboardX": true,
        "log_dir": "saved/runs",

        "validation_every": 1
    },
    "metrics": []
}
