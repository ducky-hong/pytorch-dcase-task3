{
    "name": "BAD_Raw",
    "n_gpu": 1,
    "arch": {
        "type": "RawModel",
	"args": {
	}
    },
    "data_loader": {
        "type": "RawDataLoader",
        "args":{
            "data_dir": "/home/ducky/datasets/npy/",
            "sample_rate": 22050,
            "fold": 0,
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.045,
            "momentum": 0.9
        }
    },
    "lr_scheduler": {
        "type": "ExponentialLR",
        "args": {
            "gamma": 0.98
        }
    },
    "loss": "cross_entropy",
    "trainer": {
        "epochs": 200,
        "save_dir": "saved/",
        "save_period": 100,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,
        
        "tensorboardX": true,
        "log_dir": "saved/runs",

        "validation_every": 1
    },
    "metrics": []
}
